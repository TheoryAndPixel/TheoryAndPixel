<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<title>@ViewData["Title"] - Theory & Pixel</title>

<!-- Modern Font -->
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet" />

<!-- Your custom stylesheet -->
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

<!-- Favicon (optional) -->
<link rel="icon" type="image/png" href="~/images/favicon.png" />
</head>
<body>
<header>

    <div class="site-header">
            <div class="logo-tagline">
                <img src="~/images/TransparentLogoimages.PNG" class="logo-img" alt="Theory & Pixel logo" />
                <div class="tagline">Where ideas meet pixels.</div>
            </div>

        <div class="welcome-msg">
                Custom digital art, design, and code built for connection.
            </div>

            <nav class="nav-bar">
                <a asp-page="/Index">Home</a>
                <a asp-page="/Contact">Contact</a>
                <a asp-page="/Privacy">Privacy</a>
            </nav>
            </div>
            
</header>
@if (ViewContext.RouteData.Values["page"]?.ToString()?.ToLowerInvariant() == "/index")
{
         <section class="site-notice">
       🚧 This website is still under development. In the meantime, you can still get in touch through the "Contact Us" page! 🚧
    </section>
}
<main class="main-content">
@RenderBody()
</main>

<footer>
<p>© 2025 - TheoryAndPixel - <a asp-page="/Privacy">Privacy</a></p>
</footer>

<script>
    window.addEventListener('scroll', function () {
        const header = document.querySelector('header');
        if (window.scrollY > 50) {
            header.classList.add('header--shrink');
        }   else {
            header.classList.remove('header--shrink');
            }
        });
</script>
</body>
</html>